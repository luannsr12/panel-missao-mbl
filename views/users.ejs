<%- include('partials/header') %>

    
    <body class="dashboard-layout">
        <%- include('partials/sidebar') %>
            <div class="main-content">

                <h1 class="h3 mb-4 text-gray-800">Gerenciamento de Usuários</h1>

                <!-- Botão para abrir o formulário -->
                <button id="showAddUser" class="btn btn-primary mb-4">Adicionar Usuário</button>

                <!-- Formulário oculto por padrão -->
                <div class="form-card mb-4" id="userFormBox" style="display:none;">
                    <h3 class="mb-4">Adicionar Novo Usuário</h3>
                    <form action="/users" method="POST">
                        <div class="form-group mb-3">
                            <label for="username" class="form-label">Nome de Usuário</label>
                            <input type="text" class="form-control" id="username" name="username" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="password" class="form-label">Senha</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="is_admin" name="is_admin">
                            <label class="form-check-label" for="is_admin">É Administrador?</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Adicionar Usuário</button>
                        <button type="button" class="btn btn-light ms-2" id="cancelAddUser">Cancelar</button>
                    </form>
                </div>

                <!-- Tabela de usuários -->
                <div class="card" id="userTableBox">
                    <div class="card-header">Usuários Cadastrados</div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nome de Usuário</th>
                                        <th>Admin</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach(user=> { %>
                                        <tr>
                                            <td>
                                                <%= user.id %>
                                            </td>
                                            <td>
                                                <%= user.username %>
                                            </td>
                                            <td>
                                                <%= user.is_admin ? 'Sim' : 'Não' %>
                                            </td>
                                            <td>
                                                <% if (user.id !==auth.id) { %>
                                                    <form action="/users/delete/<%= user.id %>" method="POST"
                                                        class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-danger"
                                                            onclick="return confirm('Tem certeza que deseja deletar este usuário e todos os seus perfis?');">Excluir</button>
                                                    </form>
                                                    <% } else { %>
                                                        <span class="text-muted">Você não pode excluir sua própria
                                                            conta.</span>
                                                        <% } %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <script>
                    document.addEventListener("DOMContentLoaded", function () {
                        const showBtn = document.getElementById('showAddUser');
                        const cancelBtn = document.getElementById('cancelAddUser');
                        const formBox = document.getElementById('userFormBox');
                        const tableBox = document.getElementById('userTableBox');

                        if (showBtn && cancelBtn && formBox && tableBox) {
                            showBtn.addEventListener('click', function () {
                                formBox.style.display = '';
                                tableBox.style.display = 'none';
                                showBtn.style.display = 'none';
                            });
                            cancelBtn.addEventListener('click', function () {
                                formBox.style.display = 'none';
                                tableBox.style.display = '';
                                showBtn.style.display = '';
                            });
                        }
                    });

                </script>

            </div>
            <%- include('partials/footer') %>